[Unit]
Description=Prometheus metrics scraper for TARPN BDD
After=network-online.target
Wants=network-online.target

[Service]
Environment="LC_ALL=C.UTF-8"
Environment="LANG=C.UTF-8"
Type=exec
User=pi
WorkingDirectory=/opt/tarpn/
ExecStart=/opt/tarpn/bin/tarpn-bdd-scrape

[Install]
WantedBy=multi-user.target
